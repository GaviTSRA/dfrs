{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DiamondFire.rs",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#events"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#repeats"
		},
		{
			"include": "#actions"
		},
		{
			"include": "#conditionals"
		},
		{
			"include": "#values"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#text"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"match": "\/\/.*",
					"name": "comment"
				}
			]	
		},
		"events": {
			"name": "keyword",
			"match": "@[A-z]*"
		},
		"functions": {
			"patterns": [
				{
					"match": "(fn) ([A-z]*)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "support.function" }
					}
				}
			]
		},
		"repeats": {
			"patterns": [
				{
					"name": "support.function",
					"match": "(repeat) ([A-z]+)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "support.function" }
					}
				}
			]
		},
		"conditionals": {
			"patterns": [
				{
					"name": "support.function",
					"match": "(ifp|ife|ifg|ifv) [!]?([A-z]*:)?([A-z]+)",
					"captures": {
						"1": { "name": "keyword" },
						"2": { "name": "markup.italic" },
						"3": { "name": "support.function" }
					}
				}
			]
		},
		"actions": {
			"patterns": [
				{
					"name": "support.function",
					"match": "\\b(p|g|e|v|c|s)(:[A-z]*)?[.]([A-z]+)\\b",
					"captures": {
						"1": { "name": "markup.italic" },
						"2": { "name": "markup.italic" }
					}
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dfrs",
				"match": "\\b(line|local|game|save|else)\\b"
			}]
		},
		"values": {
			"name": "support.class",
			"match": "\\b(Location|Vector|Sound|Potion|Item)\\b"
		},
		"strings": {
			"name": "string.quoted.double.dfrs",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.dfrs",
					"match": "\\\\."
				}
			]
		},
		"text": {
			"name": "string.quoted.double.dfrs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dfrs",
					"match": "\\\\."
				}
			]
		},
		"variables": {
			"name": "string.quoted.double.dfrs",
			"begin": "`",
			"end": "`",
			"patterns": [
				{
					"name": "constant.character.escape.dfrs",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dfrs"
}